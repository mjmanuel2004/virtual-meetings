<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="com.datingapp.client.ui.LoginController" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Welcome Back!" styleClass="label-header" />
    <Label fx:id="statusLabel" />
    <TextField fx:id="usernameField" promptText="Username" maxWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>
    <Button fx:id="loginButton" onAction="#handleLoginButtonAction" text="Login" defaultButton="true" minWidth="100"/>
    <Hyperlink onAction="#handleRegisterLinkAction" text="Don't have an account? Register" />
</VBox>

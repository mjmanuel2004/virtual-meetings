<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="com.datingapp.client.ui.RegistrationController" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Créer un Compte" styleClass="label-header" />
    <Label fx:id="statusLabel" />
    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" maxWidth="300"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe" maxWidth="300"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" maxWidth="300"/>
    <Button fx:id="registerButton" onAction="#handleRegisterButtonAction" text="S'inscrire" defaultButton="true" minWidth="100"/>
    <Hyperlink onAction="#handleLoginLinkAction" text="Déjà un compte ? Se connecter" />
</VBox>